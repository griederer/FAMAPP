# Environment configuration for Xcode builds
# This file is used by React Native's build scripts

# Node binary location
export NODE_BINARY=$(command -v node)

# Hermes configuration
export USE_HERMES=1

# Flipper configuration (for debugging)
export USE_FLIPPER=1

# Metro configuration
export RCT_METRO_PORT=8081

# Build optimization
export SKIP_BUNDLING=0

# iOS Deployment Target
export IPHONEOS_DEPLOYMENT_TARGET=11.0

# Additional build settings
export OTHER_SWIFT_FLAGS=-DDEBUG