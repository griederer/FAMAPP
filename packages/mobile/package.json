{
  "name": "@famapp/mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "test:performance": "jest --testPathPattern=performance",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration,performance",
    "type-check": "tsc --noEmit",
    "clean": "react-native start --reset-cache",
    "pods": "cd ios && pod install",
    "dev-tools": "./scripts/mobile-dev.sh",
    "build:ios": "./scripts/build-ios.sh",
    "build:ios:release": "./scripts/build-ios.sh -c Release -a -e",
    "deploy:staging": "./scripts/deploy-ios.sh -e staging",
    "deploy:production": "./scripts/deploy-ios.sh -e production",
    "deploy:appstore": "./scripts/deploy-ios.sh -e production -u",
    "fastlane:test": "cd ios && fastlane test",
    "fastlane:beta": "cd ios && fastlane beta",
    "fastlane:release": "cd ios && fastlane release"
  },
  "dependencies": {
    "@famapp/shared": "1.0.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@react-native-firebase/app": "^18.6.1",
    "@react-native-firebase/auth": "^18.6.1",
    "@react-native-firebase/firestore": "^18.6.1",
    "@react-native-firebase/storage": "^18.6.1",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.20",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-screens": "^3.27.0",
    "react-native-vector-icons": "^10.0.2",
    "react-native-gesture-handler": "^2.13.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.0",
    "@react-native/metro-config": "^0.72.0",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/jest": "^29.5.8",
    "@testing-library/react-native": "^12.4.2",
    "@testing-library/jest-native": "^5.4.3",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}